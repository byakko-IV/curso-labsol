%p#notice= notice
%h1 Commets
%table
  %thead
    %tr
      %th Content
      %th Post
      %th{:colspan => "3"}
  %tbody
    - @commets.each do |commet|
      %tr
        %td= commet.content
        %td= commet.post
        %td= link_to 'Show', commet
        %td= link_to 'Edit', edit_commet_path(commet)
        %td= link_to 'Destroy', commet, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Commet', new_commet_path
