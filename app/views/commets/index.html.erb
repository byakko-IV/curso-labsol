<p id="notice"><%= notice %></p>

<h1>Commets</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Post</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @commets.each do |commet| %>
      <tr>
        <td><%= commet.content %></td>
        <td><%= commet.post %></td>
        <td><%= link_to 'Show', commet %></td>
        <td><%= link_to 'Edit', edit_commet_path(commet) %></td>
        <td><%= link_to 'Destroy', commet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

