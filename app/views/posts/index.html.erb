<table border="1">
  <thead>
    <tr>
        <td>title</td>
        <td>body</td>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <%= post.title %>
        </td>
        <td>
          <%= post.body %>
        </td>
      </tr>
      <td>
        <%= link_to 'Ver', post_path(post) %>
        <br>
        <%= link_to 'Editar', edit_post_path(post) %>
        <br>        
        <%= link_to 'Eliminar', post, method: :delete, data: {confirm: "Desea eliminar el registro"} %>
      </td>
    <% end %>
  </tbody>
</table>


