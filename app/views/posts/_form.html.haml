= form_for @post  do |f|
  .form-group
    = f.label :title, class: 'control-label' 
    = f.text_field :title, class: 'form-control'
  .form-group
    = f.label :body, class: 'control-label' 
    = f.text_area :body, class: 'form-control'
  .form-group
    = f.submit "Guardar", class: 'btn btn-success'
