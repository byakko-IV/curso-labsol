%table.table.table-hover.table-striped
  %thead
    %tr
      %td title
      %td body
  %tbody
    - @posts.each do |post|
      %tr
        %td
          = post.title
        %td
          = post.body
        %td
          = link_to 'Ver', post_path(post), class: 'btn btn-info'
          %br/
          = link_to 'Editar', edit_post_path(post), class: 'btn btn-success'
          %br/
          = link_to 'Eliminar', post, method: :delete, data: {confirm: "Desea eliminar el registro"}, class: 'btn btn-danger'

= link_to "crear post", new_post_path, class: 'btn btn-primary'
